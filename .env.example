# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=kasparro_etl
POSTGRES_HOST=db
POSTGRES_PORT=5432

# API Keys (Required for production)
COINPAPRIKA_API_KEY=your_coinpaprika_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Application Settings
RUN_ETL_ON_STARTUP=true
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# ETL Configuration
ETL_BATCH_SIZE=100
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
COINPAPRIKA_RATE_LIMIT=25
COINGECKO_RATE_LIMIT=50

# Backoff Configuration
BACKOFF_BASE_DELAY=1.0
BACKOFF_MAX_DELAY=60.0
BACKOFF_FACTOR=2.0

# Checkpoint Configuration
CHECKPOINT_ENABLED=true
CHECKPOINT_INTERVAL=50

# Schema Drift Detection
SCHEMA_DRIFT_ENABLED=true
SCHEMA_DRIFT_THRESHOLD=0.8

# CSV Data Source
CSV_FILE_PATH=/app/data/crypto_data.csv